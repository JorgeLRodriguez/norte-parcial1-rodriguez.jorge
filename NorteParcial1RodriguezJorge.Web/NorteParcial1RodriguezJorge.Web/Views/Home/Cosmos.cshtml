
@{
    ViewBag.Title = "Cosmos";
}
<body>
    <h2>Alta de constelaciones.</h2>
    <div id="contenedor">
        <br>
        <div id="contenedor">
            <table border="0">
                <tr>
                    <th>Siglo:</th>
                    <td>
                        <input id="txtSiglo" type="text" placeholder="Ingrese el siglo." />
                    </td>
                </tr>
                <tr>
                    <th>Nombre:</th>
                    <td>
                        <input id="txtNombre" type="text" placeholder="Ingrese el nombre." />
                    </td>
                </tr>
                <tr>
                    <th></th>
                    <td>
                        <button id="btnGuardar" type="submit" onclick="Guardar()">Guardar</button>
                        <button id="btnMostrarLista" type="submit" onclick="MostrarLista()">Mostrar Lista</button>
                    </td>
                </tr>
            </table>
        </div>
        <div id="DivLista"> </div>
    </div>
</body>

<script src="https://code.jquery.com/jquery-3.3.1.js"></script>

<script>class Const {
        Siglo;
        Nombre;

        Fill(sig, nom)
        {
            this.Siglo = sig;
            this.Nombre = nom;
        }
    }

    var lista  = [];
    var ilista = 0;

    function Guardar()
    {
        var Siglo = document.getElementById('txtSiglo').value;
        var Nombre = document.getElementById('txtNombre').value;
        if (Siglo != "" && Nombre != "") {
            var o = new Const();
            o.Fill(Siglo, Nombre);
            lista.push(o);
            ilista++;
        }
    }
    function MostrarLista()
    {
        if (lista.length > 0)
        {
            limpiar();
            var html = '';
            html += 'Lista de Constelaciones';
            html += '<ul >'
            for (var i = 0; i < lista.length; i++) {
                html += '<li> Siglo:' + lista[i].Siglo + '&#8195 Nombre: '+ lista[i].Nombre + ' </li>';
            }

            html += '</ul>';

            $('#DivLista').append(html);
        }
    }
    function limpiar()
    {
        const el = document.getElementById('DivLista');
        while (el.firstChild)
            el.removeChild(el.firstChild);
    }</script>